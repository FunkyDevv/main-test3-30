{
  "manifest_version": 3,
  "name": "ePro AI",
  "version": "1.0.0",
  "description": "Floating AI chatbot for websites",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://www.etsy.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.etsy.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ePro AI Chatbot Settings"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["chatbot.html", "chatbot.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
